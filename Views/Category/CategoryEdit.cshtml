@model CategoryModel

<h1>Editar Categoria</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Category" asp-action="CategoryEdit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label for="Name" class="form-label">Nombre de la Categoria</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Escriba la categoria" />
    </div>
    <div class="mb-3">
        <label for="Descripcion" class="form-label">Descripción</label>
        <input type="text" class="form-control" id="Descripcion" asp-for="Descripcion" placeholder="Escriba la descripción de la categoria" />
    </div>
    
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-controller="Category" asp-action="CategoryList" class="btn btn-secondary">Regresar</a>
</form>